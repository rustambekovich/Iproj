<!DOCTYPE html>
<html lang="en" style="background-color:ghostwhite">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, shrink-to-fit=no" />

    <title>Identity Access Management</title>
    
    <link rel="icon" type="image/x-icon" href="~/auth.iproj.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/auth.iproj.ico" />
    <link href="~/css/style.css" rel="stylesheet">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/css/lyaut.css" rel="stylesheet" />
    <script src="~/js/passwordchangehideshow.js"></script>

</head>

<body>

    @if (ViewBag.IsErrorPage == null || ViewBag.IsErrorPage == false)
    {
        <div class="sidebar">
            @* <div class="header-container" style="display:flex; 
                align-items:center; justify-content:center">
                <img src="~/Iproj_login_image5.png" />
            </div> *@
            <div class="d-flex justify-content-center align-items-center mb-1">
                <a href="~/Account/Profile" class="navbar-brand text-dark">
                    <img src="~/android-chrome-512x512.png" height="80px" width="80px"
                         class="justify-content-center align-items-center" alt="Logo">
                </a>
            </div>
            <ul class="list-unstyled" style="margin-top:15px!important;">
                <li class="mb-10">
                    <form asp-controller="Account" asp-action="Profile" method="get">
                        <button id="notificationView" type="submit" class="btn inline-flex items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800 whitespace-nowrap">
                            <a href="~/Account/Profile" class="nav-link text-white">Profile Info</a>
                        </button>
                    </form>
                </li>
                <li>
                    <form asp-controller="Account" asp-action="ChangePassword" method="get">
                        <button id="logoutButton" type="submit" class="btn inline-flex items-center px-5 py-2.5 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800">
                            <a href="~/Account/ChangePassword" class="nav-link text-white">Change Password</a>
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    }
    <!--Saidbar-->

        <div class="content">
            <!--navbar-->
        @if (ViewBag.IsErrorPage == null || ViewBag.IsErrorPage == false)
        {
            <div class="container">
                <nav class="navbar navbar-expand-sm navbar-light bg-blue border-bottom box-shadow mb-3">
                    <div class="container-fluid d-flex justify-content-between align-items-center">
                        <div class="myProject">Iproj manager</div>

                        <!-- Image and Dropdown -->
                        <div class="dropdown">
                            <img src="~/user_profile2.png" class="rounded-circle" id="profileImage" alt="Profile Image" style="cursor: pointer;">
                            <div class="dropdown-menu dropdown-menu-right text-center" style="margin-right:15px;" aria-labelledby="profileImage">
                                <form asp-controller="Account" asp-action="Logout" method="post">
                                    <button id="logoutButton" type="submit" class="btn btn-outline-danger"
                                            style="height: 25px; display: flex; align-items: center; justify-content: center; margin: 0 auto;">
                                        Logout
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </nav>
            </div>
        }

            <!-- Main container -->
            <div class="maincontainer" style="padding-top:25px;">
                <main role="main" class="pb-3">
                    @RenderBody()
                </main>
            </div>

        </div>
 
    <link href="~/flowbite/flowbite.css" rel="stylesheet" />

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.slim.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.slim.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/dropdown.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>

