@using Iproj.Web.ViewModels
@model UserViewModel

<partial name="_ValidSummary" />
<div class="row justify-content-md-center">
    <div class="col-md-7 col-lg-5">
        <div class="login-wrap p-4 p-md-5">

            <div class="d-flex align-items-center justify-content-center">
                <h1>
                    <h1>
                        <img src="~/user_profile2.png" height="200px" width="200px" />
                    </h1>
                </h1>
            </div>
            <h3 class="text-center mt-4">Profile Information</h3>

            <!-- Profil ma'lumotlarini ko'rsatish uchun div bloklar -->
            <div class="form-group">
                <label>Email:</label>
                <p class="form-control">@Model.Email</p>
            </div>

            <div class="form-group">
                <label>Name:</label>
                <p class="form-control">@Model.UserName</p>
            </div>

            <div class="form-group">
                <label>Role:</label>
                <p class="form-control">@Model.Role</p>
            </div>
        </div>
    </div>
</div>

    
